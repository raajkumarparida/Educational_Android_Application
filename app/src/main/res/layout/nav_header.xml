<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/deep_moss_green"
    android:backgroundTintMode="src_over"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/imgCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:background="#80000000"
        app:cardCornerRadius="14sp">

        <ImageView
            android:id="@+id/getImageNav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/profileImgUpdateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgCard"
        android:layout_alignBottom="@+id/imgCard"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/imgCard"
        android:text="Edit Profile"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/getUserNameNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgCard"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Loading..."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/getEmailNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getUserNameNav"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Loading..."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24sp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:textColor="@color/white"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getEmailNav"
        android:layout_gravity="bottom"
        android:layout_margin="8dp"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/videoWatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/mock_box"
                android:drawableEnd="@drawable/video"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:paddingStart="6dp"
                android:paddingTop="16dp"
                android:paddingEnd="6dp"
                android:paddingBottom="6dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:text="\n"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pdfWatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/mock_box"
                android:drawableEnd="@drawable/pdf"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:paddingStart="6dp"
                android:paddingTop="16dp"
                android:paddingEnd="6dp"
                android:paddingBottom="6dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:text="\n"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/averageUse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/mock_box"
                android:drawableEnd="@drawable/used"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:paddingStart="6dp"
                android:paddingTop="16dp"
                android:paddingEnd="6dp"
                android:paddingBottom="6dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:text="\n"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/loginSince"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/mock_box"
                android:drawableEnd="@drawable/ogin"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:paddingStart="6dp"
                android:paddingTop="16dp"
                android:paddingEnd="6dp"
                android:paddingBottom="6dp"
                android:scrollHorizontally="true"
                android:singleLine="false"
                android:text="\n"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/mock_box"
            android:orientation="vertical"
            android:padding="4dp">

            <RadioGroup
                android:id="@+id/radioGroupClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonClass11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Class 11th"
                    app:buttonTint="@color/deep_moss_green" />

                <RadioButton
                    android:id="@+id/radioButtonClass12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Class 12th"
                    app:buttonTint="@color/deep_moss_green" />

            </RadioGroup>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>